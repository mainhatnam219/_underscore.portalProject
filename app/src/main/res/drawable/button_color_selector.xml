<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when button is pressed -->
    <item android:color="#D0E8FF" android:state_pressed="true"/>
    <!-- Color when button is focused (optional, for keyboard or accessibility) -->
    <item android:color="#CCE5FF" android:state_focused="true"/>
    <!-- Default color -->
    <item android:color="#EAF7FF"/>
</selector>
