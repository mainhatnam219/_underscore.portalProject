<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="4dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inf21"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="24dp"/>


        <!-- Tổng kết Section -->
        <LinearLayout
            android:id="@+id/totalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_section_background"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inf22"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vietnam_flag"
                    android:layout_marginEnd="8dp"/>


                <TextView
                    android:id="@+id/tvTotalVN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếng Việt: 0"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/english_flag"
                    android:layout_marginEnd="8dp"/>


                <TextView
                    android:id="@+id/tvTotalEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English: 0"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Học kỳ Section -->
        <LinearLayout
            android:id="@+id/semesterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_section_background"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp">


            <TextView
                android:id="@+id/tvSemesterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inf23"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vietnam_flag"
                    android:layout_marginEnd="8dp"/>


                <TextView
                    android:id="@+id/tvSemesterVN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếng Việt: 0"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/english_flag"
                    android:layout_marginEnd="8dp"/>


                <TextView
                    android:id="@+id/tvSemesterEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English: 0"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Năm học Section -->
        <LinearLayout
            android:id="@+id/yearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_section_background"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp">


            <TextView
                android:id="@+id/tvYearTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inf24"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vietnam_flag"
                    android:layout_marginEnd="8dp"/>


                <TextView
                    android:id="@+id/tvYearVN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếng Việt: 0"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/english_flag"
                    android:layout_marginEnd="8dp"/>


                <TextView
                    android:id="@+id/tvYearEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English: 0"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Total Count Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inf28"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/tvTotalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/accent"
                android:layout_marginStart="16dp"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
