<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/tab_unselected_color</item>
        <item name="tabSelectedTextColor">@color/tab_selected_color</item>
        <item name="tabIndicatorColor">@color/tab_selected_color</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="android:background">@android:color/white</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/radio_button_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>